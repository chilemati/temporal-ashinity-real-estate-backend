// ---------------------------
// 1. Datasource (PostgreSQL)
// ---------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // set this in your .env file
}

// ---------------------------
// 2. Prisma Client Generator
// ---------------------------
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

// ---------------------------
// 3. User Model
// ---------------------------
model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  fullname      String?   // optional for normal users
  password      String?   // nullable for Google users
  name          String?   // optional Google display name
  googleId      String?   @unique // store Google profile ID
  kycStatus     String?   // PENDING | VERIFIED | REJECTED
  emailVerified Boolean   @default(false)
  phone         String?   @unique
  phoneVerified Boolean   @default(false)
  emailOTP      String?
  phoneOTP      String?
  otpExpiresAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
